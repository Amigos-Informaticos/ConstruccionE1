            <Font name="System Bold" size="18.0"/>
         </font>
      </JFXButton>
      <JFXTextField fx:id="nombreArchivo" layoutX="237.0" layoutY="282.0" prefHeight="25.0"
                    prefWidth="228.0" promptText="Nombre del archivo">
